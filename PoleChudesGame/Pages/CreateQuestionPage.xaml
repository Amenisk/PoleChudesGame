<Page x:Class="PoleChudesGame.Pages.CreateQuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PoleChudesGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateQuestionPage" Background="White">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock FontSize="24" HorizontalAlignment="Center">Вопрос</TextBlock>
            <TextBox x:Name="tbQuestion" Margin="10" ></TextBox>
            <TextBlock FontSize="24" HorizontalAlignment="Center">Ответ</TextBlock>
            <TextBox x:Name="tbAnswer" Margin="10"></TextBox>
            <Button x:Name="btnCreateQuestion" Width="100" Height="25" FontSize="12" Margin="5" Click="btnCreateQuestion_Click">Create question</Button>
            <Button x:Name="btnLeave" Width="100" Height="25" FontSize="12" Margin="5" Click="btnLeave_Click">Leave</Button>
        </StackPanel>
    </Grid>
</Page>
